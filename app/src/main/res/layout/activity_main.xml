<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/windows_backround"
    tools:context=".MainActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="bottom"
      android:padding="30dp"
      android:background="@color/io_backround"
      android:orientation="vertical">

      <TextView
          android:id="@+id/input"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="end"
          android:textSize="30sp"
          android:textColor="@color/white"
          tools:text="5+10-3"/>

      <TextView
          android:id="@+id/output"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="end"
          android:textColor="@color/green"
          android:textSize="30sp"
          tools:text="12" />
  </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottom_clear"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Botton_Style"
                android:text="C"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottun_bracket_left"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Botton_Style"
                android:text="("/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottun_bracket_right"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Botton_Style"
                android:text=")"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottom_division"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Botton_Style"
                android:text="%"/>
        </TableRow>
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottom_7"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Botton_Style"
                android:text="7"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottom_8"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Botton_Style"
                android:text="8"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottom_9"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Botton_Style"
                android:text="9"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottom_multiply"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Botton_Style"
                android:text="*"/>
        </TableRow>
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottom_4"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Botton_Style"
                android:text="4"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottom_5"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Botton_Style"
                android:text="5"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottom_6"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Botton_Style"
                android:text="6"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/subscrition"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Botton_Style"
                android:text="-"/>
        </TableRow>
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottom_1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Botton_Style"
                android:text="1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottom_2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Botton_Style"
                android:text="2"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottom_3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Botton_Style"
                android:text="3"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottom_addition"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Botton_Style"
                android:text="+"/>
        </TableRow>
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottom_0"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Botton_Style"
                android:text="0"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottom_dot"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                style="@style/Botton_Style"
                android:text="."/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottom_equals"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                style="@style/Botton_Style"
                android:text="="/>
        </TableRow>
    </TableLayout>

</LinearLayout>